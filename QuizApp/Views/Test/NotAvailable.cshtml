@model QuizApp.Models.TestNotAvailableViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title mb-3">@Model.Title</h2>
                <p class="text-muted mb-4">@Model.Message</p>

                <div class="d-flex gap-2 flex-wrap">
                    <a class="btn btn-primary" asp-controller="Test" asp-action="Index">К списку тестов</a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">На главную</a>
                </div>

                <hr class="my-4" />
                <small class="text-muted">ID: @Model.TopicId</small>
            </div>
        </div>
    </div>
</div>

