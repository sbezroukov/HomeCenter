    <div class="row">
        @foreach (var day in Model.Days)
        {
            <div class="col-md-12 col-lg-6 col-xl-4 mb-4">
                <div class="card @(day.IsToday ? "border-primary" : "")">
                    <div class="card-header @(day.IsToday ? "bg-primary text-white" : "bg-light")">
                        <h5 class="mb-0">
                            @day.DayName, @day.Date.ToString("dd.MM.yyyy")
