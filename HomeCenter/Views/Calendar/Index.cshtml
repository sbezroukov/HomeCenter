                                {
                                    <div class="list-group-item px-0 @(activity.IsOverdue ? "border-start border-danger border-3" : "")">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center mb-1">
                                                    <span class="badge me-2" style="background-color: @activity.ActivityTypeColor">
