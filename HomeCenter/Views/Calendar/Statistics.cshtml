    <!-- –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ —Ç–∏–ø–∞–º –¥–µ—è—Ç–µ–ª—å–Ω–æ—Å—Ç–∏ -->
    @if (Model.ContainsKey("ByActivityType"))
    {
        var byActivityType = Model["ByActivityType"] as IEnumerable<dynamic>;
        if (byActivityType != null && byActivityType.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
